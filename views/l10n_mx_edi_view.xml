<odoo>
    <data>
        
        <record id="view_account_edi_downloaded_xml_sat_tree" model="ir.ui.view">
            <field name="name">account.edi.downloaded.xml.sat.tree</field>
            <field name="model">account.edi.downloaded.xml.sat</field>
            <field name="arch" type="xml">
                <tree string="XML SAT">
                    <field name="name"/>
                    <field name="company_id" />                    
                    <field name="partner_id"/>
                    <field name="invoice_id"/>
                    <field name="xml_file" filename="xml_file_name" invisible="1"/>
                    <field name="xml_file_name" invisible="1"/>
                    <field name="cfdi_type"/>
                    <field name="state"/>
                </tree>

            </field>
        </record>


       <record id="view_account_edi_downloaded_xml_sat_form" model="ir.ui.view">
            <field name="name">account.edi.downloaded.xml.sat.form</field>
            <field name="model">account.edi.downloaded.xml.sat</field>
            <field name="arch" type="xml">
                <form string="XML SAT">
                    <header>
                        <button string="Import Invoice" name="action_import_invoice" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'not_related'),('cfdi_type','==','emitidos')]}"/> 
                        <field name="state" widget="statusbar" statusbar_visible="draft,posted,cancel,not_imported"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="company_id"/>
                                <field name="partner_id"/>
                                <field name="invoice_id"/>
                                <field name="xml_file" filename="xml_file_name"/>
                                <field name="xml_file_name" invisible="1"/>
                                <field name="cfdi_type"/>
                            </group>
                            <group>
                                <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                            </group>
                        </group>

                        <field name="downloaded_product_id">

                            <tree string="Products" editable="bottom">
                                <field name="product_rel" />
                                <field name="sat_id" readonly="1"/>
                                <field name="description" readonly="1"/>
                            </tree>
                        </field>

                    </sheet>
                </form>
            </field>
        </record>



        <record id="account_edi_download_xml_sat_view_action" model="ir.actions.act_window">
            <field name="name">XML SAT</field>
            <field name="res_model">account.edi.downloaded.xml.sat</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="account_edi_download_xml_sat_view_menu" parent="account.menu_finance_entries_actions" action="account_edi_download_xml_sat_view_action" name="XML SAT"/>


        <!-- AQUI ABAJO ESTA LO QUE ANTES ERA EL WIZZARD -->



        <record id="view_account_edi_api_download_tree" model="ir.ui.view">
            <field name="name">account.edi.api.download.tree</field>
            <field name="model">account.edi.api.download</field>
            <field name="arch" type="xml">
                <tree string="XML SAT">
                    <field name="vat"/>
                    <field name="company_id"/>
                    <field name="cfdi_type"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                </tree>
            </field>
        </record>

        <record id="view_account_edi_api_download_form" model="ir.ui.view">
            <field name="name">account.edi.api.download.form</field>
            <field name="model">account.edi.api.download</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_download" string="Import" class="oe_highlight" type="object" attrs="{'invisible': [('state','!=','draft')]}"/>
                        <field name="state" widget="statusbar" />                       
                    </header>
                    <sheet>
                        <div name="button_box" position="inside">
                        <button class="oe_stat_button" type="object" name="view_xml_sat" icon="fa-archive">
                             <field name="xml_count" widget="statinfo" string="XML"/>
                        </button>
                        </div>
                        <h1>Download XML from SAT</h1>
                        <group >
                                <field name="vat" attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="company_id" options="{'no_open' : True}"/>
                                <field name="cfdi_type" attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="date_start" attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="date_end" attrs="{'readonly': [('state','!=','draft')]}"/>
                        </group>
                        <notebook invisible="1">
                            <page string="XML SAT" name="xml_sat">
                                <field
                                    name="xml_sat_ids"
                                    widget="section_and_note_one2many"
                                    mode="tree,kanban"
                                    attrs="{'readonly': [('state','!=','draft')]}"
                                />
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="account_edi_api_download_action" model="ir.actions.act_window">
            <field name="name">Download XML from SAT</field>
            <field name="res_model">account.edi.api.download</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
        </record>
        <menuitem id="account_edi_api_download_menu" parent="account.menu_finance_entries_actions" action="account_edi_api_download_action" name="Download XML from SAT"/>

    </data>
</odoo>
