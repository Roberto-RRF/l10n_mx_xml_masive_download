<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_users_form_custom_access_rights" model="ir.ui.view">
        <field name="name">res.users.form.custom.access.rights</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
           <xpath expr="//group[field[@name='in_group_5'] and field[@name='in_group_7']]" position="inside">
                <field string="Capacidad de eliminar XML o lotes XML SAT" name="can_delete_xml"/>
                <field string="Capacidad de acceder a XML SAT" name="can_access_xml_models"/>
            </xpath>
        </field>
    </record>
</odoo>
