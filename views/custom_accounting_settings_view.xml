<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.account.l10n.xml</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="40"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='account_reports_settings']" position="after">
                <h2>Descarga Masiva XML SAT</h2>
                <div class="row mt16 o_settings_container" id="xml_download_settings">
                    <div class="col-12 col-lg-6" style="padding-left: 0; padding-right: 0;">
                        <div class="col-12 col-lg-12 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="l10n_mx_xml_download_api_key"/>
                                <div class="text-muted">
                                    Se obtiene en la pagina web donde subió los documentos en la pestaña de empresas.
                                </div>
                                <field name="l10n_mx_xml_download_api_key" password="True" modifiers="{}"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6" style="padding-left: 0; padding-right: 0;">
                        <div class="col-12 col-lg-12 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="l10n_mx_xml_download_automatic_contact_creation"/>
                                <div class="text-muted">
                                    Creacion Automatica de contactos.
                                </div>
                                <field name="l10n_mx_xml_download_automatic_contact_creation"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>

